# Initial Azure Configuration for GridTokenX Blockchain
# Copy this file to terraform.tfvars and modify values as needed

# Azure Basic Configuration
azure_location = "East US"
environment    = "dev"
project_name   = "gridtokenx"

# Network Configuration
vnet_address_space      = "10.0.0.0/16"
gateway_subnet_cidr     = "10.0.1.0/24"
containers_subnet_cidr  = "10.0.2.0/24"
database_subnet_cidr    = "10.0.3.0/24"

# Application Configuration
app_name = "blockchain-node"
app_port = 8080
p2p_port = 30303

# Container Configuration
container_cpu    = 1
container_memory = 2
replica_count    = 1

# Database Configuration
db_sku_name   = "B_Standard_B1ms"
db_storage_mb = 32768
db_username   = "pgadmin"

# Container Registry
acr_sku = "Basic"

# Monitoring
log_retention_days = 30

# Application Settings
node_type      = "validator"
enable_mining  = true
log_level      = "INFO"

# Security (restrict in production)
allowed_ip_ranges = ["0.0.0.0/0"]

# Additional Tags (optional)
additional_tags = {
  # "Department" = "Engineering"
  # "CostCenter" = "12345"
}

